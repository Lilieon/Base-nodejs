{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "google",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": "built",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-inferrable-types": 0,
        "quotes": ["warn", "double"],
        "indent": ["warn", 2],
        "max-len": ["warn", { "code": 120 }],
        "require-jsdoc": "off",
        "valid-jsdoc": "off"
    }
}
